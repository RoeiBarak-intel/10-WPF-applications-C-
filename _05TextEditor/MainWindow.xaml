<Window x:Class="_05TextEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_05TextEditor"
        mc:Ignorable="d"
        Title="Text Editor" Height="450" Width="800">
    <Grid>
 
        <Menu HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Width="800" Margin="0,0,-6.4,0">
            <MenuItem Header="File" FontSize="16">
                <MenuItem Header="Open File" Click="OpenFile_Click"/>
                <MenuItem Header="Save File" Click="SaveFile_Click"/>
                <Separator/>
                <MenuItem Header="Close" Click="Close_Click"/>
            </MenuItem>
            <MenuItem Header="View" FontSize="16">

            </MenuItem>
        </Menu>
        <RichTextBox Name="txtBox" SpellCheck.IsEnabled="True" Margin="10,30,9.6,0" Block.LineHeight="2" />
    </Grid>
</Window>
