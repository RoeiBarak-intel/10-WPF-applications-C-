<Window x:Class="_03TodoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_03TodoApp"
        mc:Ignorable="d"
        Title="Todo" Height="450" Width="800">
    <Grid>
        <ListBox Name="lsbTasks" HorizontalAlignment="Left" Height="400" Margin="0,10,0,0" VerticalAlignment="Top" Width="226" SelectionChanged="ListBox_SelectionChanged"/>
        <TextBox Name="txbInput" FontSize="24" HorizontalAlignment="Left" Height="48" Margin="259,10,0,0" TextWrapping="Wrap" Text="Enter a task" VerticalAlignment="Top" Width="286" KeyDown="txbInput_KeyDown"/>
        <Button Name="btnAdd" FontSize="20" IsEnabled="False" Content="Add" HorizontalAlignment="Left" Margin="259,81,0,0" VerticalAlignment="Top" Width="104" Height="71" Click="btnAdd_Click"/>
        <Button Name="btnDelete" FontSize="20" IsEnabled="False"  Content="Delete" HorizontalAlignment="Left" Margin="441,81,0,0" VerticalAlignment="Top" Width="104" Height="71" Click="btnDelete_Click"/>

    </Grid>
</Window>
